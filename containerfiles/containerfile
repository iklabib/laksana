FROM docker.io/library/golang:alpine3.20 as build

ENV GOPATH /go
RUN apk add --no-cache clang make libcap-dev

WORKDIR /build
COPY cmd/markisa/main.go .
COPY . .
RUN go mod tidy && go build -o markisa

ADD https://chromium.googlesource.com/chromiumos/platform/minijail/+archive/99e8fd4bf9aaf62eab9b3cabddc2939cb3427029.tar.gz minijail.tar.gz
RUN mkdir minijail && tar -xzf minijail.tar.gz -C minijail && rm minijail.tar.gz && cd minijail && make

FROM docker.io/library/alpine:3.20

RUN apk add --no-cache musl musl-dev clang bubblewrap git python3 py3-pip py3-pytest libcap neovim bash 

COPY --from=build ["/build/minijail/minijail0", \
                   "/build/minijail/libminijail.so", \
                   "/build/minijail/libminijailpreload.so", \
                   "/build/minijail/libminijail.h", \
                   "/build/minijail/minijail0.1", \
                   "/build/minijail/minijail0.5", \
                   "./"]

RUN install -m755 -D minijail0 /usr/bin/minijail0 && \
    install -m755 -D libminijail.so /usr/lib/libminijail.so && \
    install -m755 -D libminijailpreload.so /lib/libminijailpreload.so && \
    install -m644 -D libminijail.h /usr/include/libminijail.h && \
    install -m644 -D minijail0.1 /usr/share/man/man1/minijail0.1 && \
    install -m644 -D minijail0.5 /usr/share/man/man5/minijail0.5

ADD https://go.dev/dl/go1.22.3.linux-amd64.tar.gz go1.22.3.linux-amd64.tar.gz 
RUN tar -xzf go1.22.3.linux-amd64.tar.gz -C /usr/local && rm go1.22.3.linux-amd64.tar.gz && ln -s /usr/local/go/bin/go /bin/go 

ENV USER user
ENV HOME /home/user
RUN adduser -D --home $HOME $USER 
RUN chown -R user:user ${HOME}

ENV BASE_URL "0.0.0.0:8000"
WORKDIR /app
COPY --from=build /build/markisa .
COPY --from=build /build/exercises exercises
COPY configs/minijail.cfg configs/minijail.cfg

ENTRYPOINT [ "/app/markisa" ]